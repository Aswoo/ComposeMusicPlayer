<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1DB954"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center">

    <!-- 앨범 아트 (조금 작게) -->
    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/album_art_simple_background"
        android:scaleType="centerCrop"
        android:src="@drawable/music_player_icon"
        android:contentDescription="앨범 아트" />

    <!-- 음악 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- 곡 제목 -->
        <TextView
            android:id="@+id/widget_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음악을 재생해보세요"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <!-- 아티스트 이름 -->
        <TextView
            android:id="@+id/widget_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Compose Music Player"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:alpha="0.8"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

    </LinearLayout>

    <!-- 컨트롤 버튼들 (더 컴팩트하게) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- 이전 곡 버튼 -->
        <ImageButton
            android:id="@+id/widget_previous_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/control_button_simple_background"
            android:src="@drawable/ic_skip_previous"
            android:contentDescription="이전 곡"
            android:scaleType="centerInside" />

        <!-- 재생/일시정지 버튼 -->
        <ImageButton
            android:id="@+id/widget_play_pause_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/play_button_simple_background"
            android:src="@drawable/ic_play_arrow"
            android:contentDescription="재생/일시정지"
            android:scaleType="centerInside" />

        <!-- 다음 곡 버튼 -->
        <ImageButton
            android:id="@+id/widget_next_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/control_button_simple_background"
            android:src="@drawable/ic_skip_next"
            android:contentDescription="다음 곡"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>
