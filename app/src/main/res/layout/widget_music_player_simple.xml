<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_simple_background"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- 앨범 아트 (4x1에 맞게 작게) -->
    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/album_art_simple_background"
        android:scaleType="centerCrop"
        android:src="@drawable/music_player_icon"
        android:contentDescription="@string/widget_album_art_description" />

    <!-- 음악 정보 (4x1에 맞게 한 줄로) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginEnd="6dp"
        android:gravity="center_vertical">

        <!-- 곡 제목과 아티스트를 한 줄에 -->
        <TextView
            android:id="@+id/widget_song_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_default_song"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <!-- 구분자 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:alpha="0.6" />

        <!-- 아티스트 이름 -->
        <TextView
            android:id="@+id/widget_artist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_default_artist"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:alpha="0.8"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <!-- 재생 상태 표시 -->
        <View
            android:id="@+id/widget_play_indicator"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/play_indicator_simple_background"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 컨트롤 버튼들 (4x1에 맞게 작게) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 이전 곡 버튼 -->
        <ImageButton
            android:id="@+id/widget_previous_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/control_button_simple_background"
            android:src="@drawable/ic_skip_previous"
            android:contentDescription="@string/widget_previous_description"
            android:scaleType="centerInside" />

        <!-- 재생/일시정지 버튼 -->
        <ImageButton
            android:id="@+id/widget_play_pause_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/play_button_simple_background"
            android:src="@drawable/ic_play_arrow"
            android:contentDescription="@string/widget_play_pause_description"
            android:scaleType="centerInside" />

        <!-- 다음 곡 버튼 -->
        <ImageButton
            android:id="@+id/widget_next_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/control_button_simple_background"
            android:src="@drawable/ic_skip_next"
            android:contentDescription="@string/widget_next_description"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>
